<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_first_time_setup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimaryLight"
    tools:context="com.tech.ab.butler.activities.FirstTimeSetupActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/butler"
        android:layout_gravity="center_horizontal"
        android:id="@+id/iVButler"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Schedule Name"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:drawablePadding="@dimen/standard_5"
        android:padding="@dimen/standard_12"
        android:textStyle="bold|italic"
        android:fontFamily="cursive"
        android:id="@+id/tvScheduleName"
        android:gravity="center"
        android:layout_marginRight="36dp"
        android:layout_marginEnd="36dp"
        android:layout_alignBaseline="@+id/tvAddPlaces"
        android:layout_alignBottom="@+id/tvAddPlaces"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"/>

    <TextView
        android:text="Add Places"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:background="@color/colorWhite"
        android:drawablePadding="@dimen/standard_5"
        android:padding="@dimen/standard_12"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:fontFamily="cursive"
        android:id="@+id/tvAddPlaces"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_below="@+id/iVButler"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true"/>


</RelativeLayout>
